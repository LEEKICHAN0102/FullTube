extends base.pug

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(placeholder="비밀번호",name="oldPassword",required,type="password")
    input(placeholder="새 비밀번호",name="newPassword",required,type="password")
    input(placeholder="새 비밀번호(확인)",name="newPasswordConfirm",required,type="password")
    input(type="submit",value="비밀번호 변경")