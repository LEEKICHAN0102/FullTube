extends base.pug

block content
  img.edit__profile(src=`${loggedInUser.avatarUrl}`, width="100", height="100")
  if errorMessage 
    span=errorMessage
  form(method="POST", enctype="multipart/form-data").edit-profile__form
    label(for="avatar") 프로필 사진
    input(id="avatar",type="file",name="avatar",accept="image/*")
    input(name="email",placeholder="이메일 | E-mail",type="email",required,value=loggedInUser.email)
    input(name="username",placeholder="닉네임",type="text",required,value=loggedInUser.username)
    input(name="name",placeholder="이름",type="text",required,value=loggedInUser.name)
    input(type="submit",value="수정")
    if !loggedInUser.socialOnly
      div.edit-profile__password
        a(href="change-password") 비밀번호 변경 &rarr;