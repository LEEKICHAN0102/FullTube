extends base

block content
  if errorMessage
    span=errorMessage
  form(method="POST")
    input(name="email",type="email",required,placeholder="이메일 | E-mail")
    input(name="name",type="text",required,placeholder="이름")
    input(name="password",type="password",required,placeholder="비밀번호")
    input(name="password2",type="password",required,placeholder="비밀번호 재입력")
    input(name="username",type="text",required,placeholder="사용 할 닉네임")
    input(type="submit",value="계정 생성")
  div.auth-switch
    a(href="/login") 이미 계정이 있나요? &rarr;
      