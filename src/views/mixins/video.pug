mixin video(video)
    a(href=`/video/${video.id}`).video-mixin
        div.video-mixin__thumb(style=`background-image:url(${video.thumbnail});background-size:cover;background-position:center;`)
        div.video-mixin__data
            img.meta-img(src=`${video.owner.avatarUrl}`)
            span.video-mixin__title=video.title
        div.video-mixin__meta
            span #{video.owner.username} • 
            span #{video.meta.views} 회